{
    "openapi": "3.0.0",
    "info": {
        "title": "School Bus Tracking API - v2 Dynamic",
        "description": "Refactored API supporting dynamic Trip orchestration between Drivers, Buses, and Routes.",
        "version": "2.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:5000/api"
        }
    ],
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "Login": {
                "type": "object",
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "example": "admin@school.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "admin123"
                    }
                }
            },
            "UserCreate": {
                "type": "object",
                "required": [
                    "name",
                    "email",
                    "password",
                    "role"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string",
                        "enum": [
                            "DRIVER",
                            "PARENT"
                        ]
                    }
                }
            },
            "Route": {
                "type": "object",
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "stops": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "polyline": {
                        "type": "string"
                    }
                }
            },
            "Bus": {
                "type": "object",
                "required": [
                    "busNumber"
                ],
                "properties": {
                    "busNumber": {
                        "type": "string"
                    },
                    "defaultRoute": {
                        "type": "string",
                        "description": "Route ObjectId"
                    },
                    "isActive": {
                        "type": "boolean",
                        "default": true
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "ONLINE",
                            "OFFLINE"
                        ]
                    },
                    "activeTrip": {
                        "type": "string",
                        "description": "Trip ObjectId"
                    }
                }
            },
            "Student": {
                "type": "object",
                "required": [
                    "name",
                    "class",
                    "parent"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "class": {
                        "type": "string"
                    },
                    "parent": {
                        "type": "string",
                        "description": "Parent User ObjectId"
                    },
                    "assignedRoute": {
                        "type": "string",
                        "description": "Route ObjectId"
                    },
                    "assignedBus": {
                        "type": "string",
                        "description": "Bus ObjectId"
                    },
                    "activeTripId": {
                        "type": "string",
                        "description": "Trip ObjectId"
                    }
                }
            },
            "Trip": {
                "type": "object",
                "required": [
                    "driverId",
                    "busId",
                    "routeId"
                ],
                "properties": {
                    "driverId": {
                        "type": "string"
                    },
                    "busId": {
                        "type": "string"
                    },
                    "routeId": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "STARTED",
                            "STOPPED",
                            "ENDED"
                        ]
                    },
                    "startedAt": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "stoppedAt": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "endedAt": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "Tracking": {
                "type": "object",
                "required": [
                    "tripId",
                    "lat",
                    "lng"
                ],
                "properties": {
                    "tripId": {
                        "type": "string"
                    },
                    "lat": {
                        "type": "number"
                    },
                    "lng": {
                        "type": "number"
                    },
                    "speed": {
                        "type": "number"
                    },
                    "timestamp": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "Attendance": {
                "type": "object",
                "required": [
                    "studentId",
                    "tripId",
                    "status"
                ],
                "properties": {
                    "studentId": {
                        "type": "string"
                    },
                    "tripId": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "PICKED_UP",
                            "DROPPED_OFF"
                        ]
                    },
                    "timestamp": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        }
    },
    "security": [
        {
            "BearerAuth": []
        }
    ],
    "paths": {
        "/api/auth/login": {
            "post": {
                "summary": "Login",
                "tags": [
                    "Auth"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Login"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/admin/users": {
            "post": {
                "summary": "Create User (Admin)",
                "tags": [
                    "Admin"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserCreate"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/admin/buses": {
            "get": {
                "summary": "Get All Buses",
                "tags": [
                    "Admin"
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/admin/live-trips": {
            "get": {
                "summary": "Get All Live Journeys (Admin)",
                "tags": [
                    "Admin Tracking"
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/admin/trip-history": {
            "get": {
                "summary": "Get Journey History (Admin)",
                "tags": [
                    "Admin Tracking"
                ],
                "parameters": [
                    {
                        "name": "driverId",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "busId",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "routeId",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/admin/trip-location/{tripId}": {
            "get": {
                "summary": "Get Bus Location (Admin)",
                "tags": [
                    "Admin Tracking"
                ],
                "parameters": [
                    {
                        "name": "tripId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/admin/buses/{id}/status": {
            "put": {
                "summary": "Update Bus Status (Admin)",
                "tags": [
                    "Admin"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "isActive": {
                                        "type": "boolean"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/admin/students/{id}/route": {
            "put": {
                "summary": "Reassign Student Route (Admin)",
                "tags": [
                    "Admin"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "routeId": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/admin/students/{id}/bus": {
            "put": {
                "summary": "Reassign Student Bus (Admin)",
                "tags": [
                    "Admin"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "busId": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/driver/buses": {
            "get": {
                "summary": "Get Active Buses for Driver",
                "tags": [
                    "Driver"
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/routes": {
            "get": {
                "summary": "Get All Routes",
                "tags": [
                    "Selection"
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/driver/start-trip": {
            "post": {
                "summary": "Start Trip (Driver)",
                "tags": [
                    "Driver"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "busId",
                                    "routeId"
                                ],
                                "properties": {
                                    "busId": {
                                        "type": "string"
                                    },
                                    "routeId": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/driver/stop-trip": {
            "post": {
                "summary": "Stop Trip (Pause) (Driver)",
                "tags": [
                    "Driver"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "tripId": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/driver/resume-trip": {
            "post": {
                "summary": "Resume Trip (Driver)",
                "tags": [
                    "Driver"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "tripId": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/driver/end-trip": {
            "post": {
                "summary": "End Trip (Driver)",
                "tags": [
                    "Driver"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "tripId": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/tracking/update": {
            "post": {
                "summary": "Send Live GPS Update",
                "tags": [
                    "Tracking"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Tracking"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/parent/trip-location/{tripId}": {
            "get": {
                "summary": "Get Trip Location (Parent)",
                "tags": [
                    "Parent"
                ],
                "parameters": [
                    {
                        "name": "tripId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/attendance": {
            "post": {
                "summary": "Mark Attendance",
                "tags": [
                    "Attendance"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Attendance"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        }
    }
}